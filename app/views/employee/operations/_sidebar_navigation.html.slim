        li.nav-item.mr-3 = link_to 'Demographic data', new_demographic_detail_url, class: nav_link_class(new_demographic_detail_url)
      li.nav-item.mr-3 = link_to 'Clients', clients_url, class: nav_link_class(clients_url)
      li.nav-item.mr-3 = link_to 'Vendors', vendors_url, class: nav_link_class(vendors_url)
      li.nav-item.mr-3 = link_to 'Unsubscribed list', unsubscriptions_url, class: nav_link_class(unsubscriptions_url)
