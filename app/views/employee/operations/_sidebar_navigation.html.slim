      li.nav-item.mr-3 = link_to 'Closed-out projects', closed_out_projects_url, class: nav_link_class(closed_out_projects_url)
      li.nav-item.mr-3 = link_to 'Prescreener Questions Library', prescreener_library_questions_url, class: nav_link_class(prescreener_library_questions_url)
