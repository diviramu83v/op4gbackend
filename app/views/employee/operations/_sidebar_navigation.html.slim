    - if can?(:read, Project)
      li.nav-item.mr-3 = link_to 'Projects', projects_url, class: nav_link_class(projects_url)
    - if can?(:view_and_modify, Project)
      li.nav-item.mr-3 = link_to 'Project close-outs', project_close_outs_url, class: nav_link_class(project_close_outs_url)
      li.nav-item.mr-3 = link_to 'Warnings', warnings_url, class: nav_link_class(warnings_url)
